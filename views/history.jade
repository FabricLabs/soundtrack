extends layout

block content
  h1 Track History
  ul
    for play in plays
      li
        a(href="/#{play._track._artist}") #{play._track._artist} [artist]
        |  &mdash; 
        a(href="/#{play._track._artist}/#{play._track.slug}/#{play._track._id}") #{play._track.title}
        small  queued by 
          if (play._curator)
            a(href="#{play._curator.slug}") #{play._curator.username}
          else
            span random entropy (chosen by the machine)