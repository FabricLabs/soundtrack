extends layout

block content

  #stage
    .row-fluid
      .span3
        #current-track
          //h2#track-title #{room.playlist[0].title}
          h5#track-title foo
          span#time 00:00

        .row-fluid
          .span3
            a.btn(href="#", data-action="toggle-volume", data-intro="<h5>Welcome to soundtrack.io!</h5>  Since you're new and we're polite, we've muted the sound.  You can turn it on here.", data-step="1")
              i.icon-volume-up
          .span9
            input.slider(type="text", name="volume", value="80", data-slider-min="0", data-slider-max="100", data-slider-value="80")

        if (user)
          a.btn(href="#", onclick="$.post('/skip'); return false;") skip

        h3 Playlist (#{room.playlist.length})
        ul#playlist(data-intro="If the playlist ever reaches zero, soundtrack.io will automatically choose song based on what's been played in the past.", data-step="3")

        h3 Add Track
        form#search-form
          if (user)
            input.input-block-level(type="text", placeholder="type here and press [ENTER] to search", data-intro="<h5>Queue a song!</h5>Search here for a track to add it to the playlist.", data-step="2")#search-query
          else
            input.input-block-level(type="text", disabled, placeholder="you must be registered to do this!", data-intro="<h5>Queue a song!</h5>Search here for a track to add it to the playlist.", data-step="2")#search-query
          #search-results

      .span6
        #screen-one
          .screen-inner#screen-inner

      #decks
        #slot-1
        #slot-2
        #slot-3
        #slot-4
        #slot-5

      .span3(data-intro="<h5>Music is social!</h5>You can chat with all the other listeners here.  They're listening to the same exact music, at the same time!", data-step="4")
        h3
          small.pull-right.user-count
          | Chat
        #messages
          each message in messages
            include partials/message
        form#chat-form
          if (user)
            input.input-block-level(type="text", autocomplete="off", placeholder="click here to join the conversation")#chat-input
          else
            input.input-block-level(type="text", autocomplete="off", disabled, placeholder="click here to join the conversation")#chat-input

  #audience
    h3 Users
    #userlist

  #backup
    h3 #{backup.length} Current "Backup" Tracks (in case the playlist hits bottom)
    each track in backup
      span #{track.title}
      |  

  if (!user)
    script.
      registered = false;
  else
    script.
      registered = true;